<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seaGreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="20dp">
    <LinearLayout
        android:id="@+id/linear_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/back_login"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@color/seaGreen" />
        <TextView
            android:id="@+id/login_text"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN PAGE"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/usrName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:layout_below="@+id/linear_text"
        app:cardBackgroundColor="@color/oxfordBlue"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <EditText
            android:id="@+id/username1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:maxLines="1"
            android:textColor="@color/white"
            android:padding="20dp"
            android:background="@null"
            android:textColorHint="@color/gray" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/passName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:layout_below="@+id/usrName"
        app:cardBackgroundColor="@color/oxfordBlue"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:maxLines="1"
        android:textColor="@color/white"
        android:padding="20dp"
        android:background="@null"
        android:textColorHint="@color/gray" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnsignin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/just_click_me"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/passName"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsignin1"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/github"
            android:layout_marginEnd="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/github" />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/insta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/instagram" />

    </LinearLayout>
</RelativeLayout>

</ScrollView>